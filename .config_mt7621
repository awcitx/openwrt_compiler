# .config_mt7621 for UBNT ER-X (ramips/mt7621) - Lean OpenWrt with full ShadowsocksR/ssr-plus
# 2026 新手优化版：启用 SSR+中文+必要工具，禁用大包节省空间

CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_ubnt_edgerouter-x=y
CONFIG_TARGET_ramips_mt7621_DEVICE_ubnt_edgerouter-x-sfp=y  # 如果你的是 SFP 版也支持

# 基础系统设置
CONFIG_KERNEL_KALLSYMS=y
CONFIG_KERNEL_DEBUG_INFO=y
CONFIG_IB=y

# LuCI Web 界面（必须）
CONFIG_PACKAGE_luci=y
CONFIG_LUCI_LANG_zh_Hans=y  # 默认中文（简体）

# ShadowsocksR Plus+ 核心插件（全开）
CONFIG_PACKAGE_luci-app-ssr-plus=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_ShadowsocksR_Libev_Client=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_ShadowsocksR_Libev_Server=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Shadowsocks_Libev_Client=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Trojan=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Xray=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_V2Ray=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Simple_Obfs=y  # 简单混淆
CONFIG_PACKAGE_luci-i18n-ssr-plus-zh-cn=y  # 中文界面

# ShadowsocksR 底层库（必须配套）
CONFIG_PACKAGE_shadowsocksr-libev-ssr-local=y
CONFIG_PACKAGE_shadowsocksr-libev-ssr-redir=y
CONFIG_PACKAGE_shadowsocksr-libev-ssr-server=y
CONFIG_PACKAGE_shadowsocksr-libev-ssr-tunnel=y

# 其他常用插件（可选但推荐，ER-X 空间够用）
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_luci-i18n-ddns-zh-cn=y
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-i18n-upnp-zh-cn=y
CONFIG_PACKAGE_luci-app-arpbind=y
CONFIG_PACKAGE_luci-app-autoreboot=y
CONFIG_PACKAGE_luci-app-filebrowser=y  # 文件管理
CONFIG_PACKAGE_luci-app-ttyd=y  # 终端
CONFIG_PACKAGE_luci-i18n-ttyd-zh-cn=y
CONFIG_PACKAGE_coremark=y  # 跑分工具

# 去掉一些大包节省空间（ER-X NAND 有限）
CONFIG_PACKAGE_luci-app-serverchan=n
CONFIG_PACKAGE_luci-app-pushbot=n
CONFIG_PACKAGE_luci-app-alist=n
CONFIG_PACKAGE_luci-app-homeproxy=n  # 如果你不需要 clash 等
CONFIG_PACKAGE_luci-app-passwall=n
CONFIG_PACKAGE_luci-app-passwall2=n

# 语言和主题
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

# 编译选项优化（更快、更小）
CONFIG_CLEAN_IPKG=y
CONFIG_DOWNLOAD_FOLDER="/github/workspace/dl"
CONFIG_CCACHE=y
CONFIG_CCACHE_DIR="/github/workspace/.ccache"
